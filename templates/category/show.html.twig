<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{category.nameCategory}}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
            <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
        {% endblock %}
    </head>
    <body>
        {% block navbar %}
            {% include "navigation.html.twig" %}
        {% endblock %}
        {% block intro %}
            <div style="background-image: url({{ asset('images/'~category.pictureCategory~'.jpg') }});" class="box mb-5">
                <div class="opaquefilter"></div>
                <h1 class="Middletitle position-absolute">{{category.nameCategory}}</h1>
            </div>
        {% endblock %}
{% block body %}
    <div class="container">
        <div class="row justify-content-between no-gutters">
        <div class="col-12 mb-4 ">
            <nav aria-label="breadcrumb ">
            <ol class="breadcrumb bg-white p-0">
                <li class="breadcrumb-item text-decoration-none"><a href="{{ path('main') }}">Accueil</a></li>
                <li class="breadcrumb-item"><a href="{{ path('category_index') }}">Catégories</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{category.nameCategory}}</li>
            </ol>
            </nav>
        </div>
            
            <div class="boxAddTips d-flex justify-content-between col-8 mb-5">
                <a href="{{ path('tips_new') }}" class="btn btn-primary px-5">Ajouter un tips</a>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Trier
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="{{ path('category_show', {'id': category.id})}}?a=1">Le + d'utilisateurs</a>
                        <a class="dropdown-item" href="{{ path('category_show', {'id': category.id})}}?a=2">Les + récents</a>
                        <a class="dropdown-item" href="{{ path('category_show', {'id': category.id})}}">Les + anciens</a>
                    </div>
                    </div>
            </div>
            <div class="searchBar rounded col-3 mb-5">
                <i class="fa fa-search" aria-hidden="true"></i>
            </div>
            {# ================ pin up the boxtips=========== #}

            <div class="allTips d-flex flex-column col-8">
                {% set i = 0 %}

                {# sorting system : I get the variable passed in the url#}
                {% set sort = '' %}
                {% set a = app.request.query.get('a') %}
                {% if a == 1 %}
                    {% set sort = descendingOrderUsers %}
                {% elseif a == 2 %}
                    {% set sort = descendingOrderDate %}
                {% else %}
                    {% set sort = pagination %}
                {% endif %}
                {% for tip in sort %}
                {#  #}

                    {% if (i % 2 == 0)%}
                        <div class="boxTips rounded p-4  bg-grey">
                    {% else %}
                        <div class="boxTips rounded p-4 ">
                    {% endif %}
                    {% set i = i + 1 %}
                        <div class="d-flex justify-content-between">
                            <p class="text-success m-0"> {{tip.numberUsers}} utilisateurs </p>
                            <form  class="col-4"method="post" action="{{ path('tips_newUser', {'id': tip.id}) }}" onsubmit="return confirm('Vous utilisez ce tips ?');">
                                <input type="hidden" name="_method" value="USETIPS">
                                <input type="hidden" name="_token" value="{{ csrf_token('usetips' ~ tip.id) }}">
                                {# the button color changes if i use the tips #}
                                {% set flag = 0 %}
                                {% for useTips in tip.users %}
                                    {% if useTips == user %}
                                        {% set flag = 1 %}
                                    {% endif %}
                                {% endfor %}
                                {% if flag == 1 %}
                                    <button class="btn btn-success col-12 d-flex justify-content-center py-0 px-0 m-0">
                                {% else %}
                                    <button class="btn btn-primary col-12 d-flex justify-content-center py-0 px-0 m-0">
                                {% endif %}
                                {#  #}
                                    <img src="{{ asset('images/logo.png') }}" alt="Logo du site (Tips) ">
                                    <p class="align-self-center ml-1 m-0">J'utilise ce Tips</p>
                                </button>
                            </form>
                        </div>
                        <h3>{{tip.titleTips | upper}}</h3>
                        <p>{{tip.contentTips}}</p>
                        <div class="boxIcon d-flex justify-content-between align-items-end mt-4">
                            {# share on Facebook #}
                            <script async defer crossorigin="anonymous" src="https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v6.0"></script>
                            <div class="fb-share-button" data-href="{{ path('tips_show', {'id': tip.id}) }}" data-layout="button" data-size="small"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.google.fr%2Fmaps&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Partager</a></div>
                            
                            {# display the lightbox  #}
                            {% if tip.image %}
                                <!-- Button trigger modal -->
                                <i class="fa fa-camera text-dark" aria-hidden="true" data-toggle="modal" data-target="#{{i}}"></i>
                                <!-- Modal -->
                                <div class="modal fade" id="{{i}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <img src='{{ asset('images/products/'~tip.image~' ') }}' alt="Image associée au tips">                   
                                        </div>
                                    </div>
                                </div>    
                            {% else %}
                                <i class="fa fa-camera text-dark-grey" aria-hidden="true"></i>
                            {% endif %}
                            {#  #}
                        </div>
                    </div>
                {% endfor %}
                <div class="m-auto ">
                    {{ knp_pagination_render(pagination) }}
                </div>
                
            </div>
            <div class="boxCategory rounded bg-lightgreen col-3">
                <h3 class="bg-green text-white p-4 text-center rounded">LES CATEGORIES</h3>
                <div class="container">
                    <div class="row">
                    <ul class="text-center col-12 py-3">
                    {% for cat in categories %}
                        <li class="my-1"><a class="text-white"href="{{ path('category_show', {'id': cat.id}) }}">{{cat.nameCategory}}</a></li>                               
                    {% endfor %}
                    </ul>
                    </div>
                </div>  
            </div>
        </div>
    </div>
{% endblock %}
        {% block footer %}
            {% include "footer.html.twig" %}
        {% endblock %}
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
            <script src="{{ asset('js/app.js') }}"></script> 
        {% endblock %}
  </body>
</html>
