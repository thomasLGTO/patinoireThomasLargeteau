<form method="post" action="{{ path('tips_delete', {'id': tip.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tip.id) }}">
    <button class="btn btn-danger my-3 col-12">Supprimer</button>
</form>
